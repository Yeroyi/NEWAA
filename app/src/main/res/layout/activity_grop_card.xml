<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GropCardActivity">

<FrameLayout
    android:id="@+id/fram_lay"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_220">
    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:id="@+id/mbanner"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180">

        <ImageButton
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/ic_back"
            />

        <ImageButton
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/ic_back"
            />
    </RelativeLayout>


        <com.example.hongligs.bean.CircleImageView
            android:id="@+id/Image_icon"
            android:layout_marginTop="@dimen/dp_140"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerInParent="true"
            />


</FrameLayout>

    <TextView
        android:id="@+id/text_yanzhi"
        android:layout_gravity="center"
        android:textColor="#171E2A"
        android:textSize="@dimen/sp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜"
        />

    <TextView
        android:id="@+id/text_qiamming"
        android:layout_gravity="center"
        android:textColor="#79818D"
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        />
    <TextView
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_12"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交友扩利额"
        />
</LinearLayout>